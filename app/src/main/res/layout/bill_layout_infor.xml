<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Mail:"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:layout_weight="12"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:enabled="false"
                android:id="@+id/mail"
                android:hint="mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="User name:"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:layout_weight="5"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:enabled="false"
                android:id="@+id/user_name"
                android:hint="user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Bill id:"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <EditText
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/bill_id"
                    android:enabled="false"
                    android:hint="bill_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Total:"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <EditText
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:id="@+id/total_cost"
                    android:enabled="false"
                    android:hint="total_cost"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textStyle="bold"
                android:padding="5dp"
               android:gravity="center"
                android:hint="name"
                android:textSize="20sp"
                android:id="@+id/food_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:hint="number"
                android:textSize="20sp"
                android:id="@+id/number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:textStyle="bold"
                android:padding="5dp"
               android:gravity="center"
                android:hint="total cost"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/cd_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:padding="10dp"
            android:background="@color/orange"
            android:textColor="@color/white"

            android:id="@+id/location"
            android:text="Go to location"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cd_confirm"
    app:cardCornerRadius="10dp"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:background="@color/orange"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:id="@+id/confirm"
        android:text="CONFIRM"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
</androidx.cardview.widget.CardView>


</RelativeLayout>